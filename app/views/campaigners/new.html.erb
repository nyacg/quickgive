<div class="container">
  <h1 class="page-header">Register as campaigner</h1>

  <% if @campaigner.errors.any? %>
  <ul>
    <% @campaigner.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>

  <%= form_for @campaigner, url: {action: :create} do |f| %>
    <%= f.fields_for :authentications, @campaigner.authentications.first do |c| %>
      <p>
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </p>
    <p>
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </p>
    <p>
        <%= c.label :email %>
        <%= c.text_field :email %>
      </p>
      <p>
        <%= c.label :password %>
        <%= c.password_field :password %>
      </p>
    <% end %>
    <%= f.submit "Signup" %>
  <% end %>
</div>
