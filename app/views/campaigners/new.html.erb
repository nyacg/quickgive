<div class="container">
  <h1 class="page-header">Register as campaigner</h1>

  <% if @campaigner.errors.any? %>
  <ul>
    <% @campaigner.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>
  <div class = "col-md-8">
    <%= form_for @campaigner, url: {action: :create} do |f| %>
      <%= f.fields_for :authentications, @campaigner.authentications.first do |c| %>
        <%= f.label :first_name, nil, class: "campaigner-label" %>
      <div class= "input-group">
        <span class="input-group-addon glyphicon glyphicon-user"></span>
        <%= f.text_field :first_name, class: "campaigner-field form-control", value: @name %>
      </div>
      <%= f.label :last_name, nil, class: "campaigner-label" %>
      <div class= "input-group">
        <span class="input-group-addon glyphicon glyphicon-user"></span>
        <%= f.text_field :last_name, class: "campaigner-field form-control" %>
      </div>
      <%= c.label :email, nil, class: "campaigner-label" %>
      <div class= "input-group">
          <span class="input-group-addon glyphicon glyphicon-envelope"></span>
          <%= c.text_field :email, class: "campaigner-field form-control" %>
        </div>
        <%= c.label :password, nil, class: "campaigner-label" %>
        <div class= "input-group">
          <span class="input-group-addon glyphicon glyphicon-lock"></span>
          <%= c.password_field :password, class: "campaigner-field form-control" %>
        </div>
      <% end %>
      <button class="btn btn-block btn-default sign-up">Sign up <span class="none"></span></button>
    <% end %>
    <div id="alternative">
      <a href="/auth/twitter" class="btn btn-primary btn-info">Sign in with Twitter</a>
      <a href="/auth/facebook" class="btn btn-primary btn-info">Sign in with Facebook</a>
      <a href="/auth/instagram" class="btn btn-primary btn-info">Sign in with Instagram</a>
    </div>
  </div>
</div>
